@model IEnumerable<CorePractice.Models.Module>

@{

}

<form action="" method="post">

    <div class="container-fluid">

        <div class="row">
            <div></div>

            <div class="col-md-4  offset-md-1 col-12 d-block mx-auto">
                @Html.ActionLink("Module Creation", "Create", null, null, new { @class = "btn btn-outline-info btn-block", @id = "btnBack" })

            </div>

            <div class="col-md-6 col-12 d-block mx-auto flot-right">
                <h2 id="styletext">Module List</h2>
            </div>
        </div>



    </div>
    <div class="card p-2">
        <div class="table-responsive text-nowrap">
            <table id="tbllist" class="table table-striped table-bordered table-sm table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleCaption)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleLink)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleImageExtension)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsInActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SLNO)
                        </th>
                        <th></th>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleCaption)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleLink)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleImage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleImagePath)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleImageExtension)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsInActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLNO)
                            </td>
                            <td>
                                <span data-toggle="tooltip" title="Edit">
                                    @Html.ActionLink(" ", "Edit", new { id = item.ModuleId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete">
                                    @Html.ActionLink(" ", "Delete", new { Id = item.ModuleId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>


